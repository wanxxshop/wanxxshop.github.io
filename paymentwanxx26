    <script>
        function toggleMethod(method, element) {
            document.querySelectorAll(".payment-info").forEach(info => {
                info.classList.remove("show");
            });

            document.querySelectorAll(".method").forEach(btn => btn.classList.remove("active"));document.getElementById(payment-${method}).classList.add("show");
            element.classList.add("active");
        }

        function copyText(text, element) {
            navigator.clipboard.writeText(text).then(() => {
                alert('Nomor berhasil disalin: ' + text);
                element.style.color = "rgb(0, 153, 0)"; // Warna hijau setelah disalin
                setTimeout(() => {
                    element.style.color = "rgb(0, 102, 204)";
                }, 2000);
            }).catch(err => {
                console.error('Gagal menyalin teks', err);
            });
        }
    </script>
